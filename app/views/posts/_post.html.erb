<div id="<%= dom_id post %>" class="p-6 bg-white shadow-md rounded-lg">
  <h2 class="font-bold text-2xl mb-2">
    <%= link_to post.title, post, class: "text-blue-600 hover:underline" %>
  </h2>
  <p class="text-gray-700"><%= post.body %></p>

  <% if action_name != "show" %>
    <div class="mt-4">
      <%= link_to "Show", post, class: "rounded-lg py-2 px-4 bg-blue-500 text-white inline-block font-medium mr-2" %>
      <%= link_to "Edit", edit_post_path(post), class: "rounded-lg py-2 px-4 bg-blue-500 text-white inline-block font-medium" %>
    </div>
  <% end %>
</div>